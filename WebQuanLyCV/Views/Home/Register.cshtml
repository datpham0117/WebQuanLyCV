<div class=" register">
    <h1>TẠO TÀI KHOẢN</h1>
    @*Thêm vào thuộc tính @enctype = "multipart/form-data" vào form để có thể truyền hình ảnh*@
    @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
    <div class="col-md-6 register-top-grid register-bottom-grid">
        <h3>Thông tin cá nhân</h3>
        <div>
            <span>Họ tên</span>
            @Html.TextBox("HoTen")
        </div>
        <div>
            <span>Email Address</span>
            @Html.TextBox("Email")
            <span style="color:red;">@ViewBag.Upload1</span>
        </div>
        <div>
            <span>Số điện thoại cá nhân</span>
            @Html.TextBox("SDTCN")
        </div>
        <div>
            <span>Ngày sinh</span>
            <input name="NgaySinh" type="date" />
        </div>
        <br />
        <div>
            <span>Trình độ học vấn</span>
            @Html.TextBox("TrinhDoHocVan")
        </div>
        <div>
            <span>Giới thiệu bản thân</span>
            <textarea name="GioiThieuBanThan" style="width: 100%"></textarea>
        </div>
        <div>
            <span>Mật khẩu</span>
            @Html.Password("MatKhau")
        </div>
        <div>
            <span>Câu trả lời</span>
            @Html.DropDownList("CauHoi")
            <br />
            @Html.TextBox("CauHoiAN")
        </div>
        <div>
            @*Tên của DropDownList phải giống với tên ViewBag để truyền đúng giữ liệu*@
            <span>Người sử dụng</span>
            @Html.DropDownList("MaLoaiTK", null, new { @class = "form-control" })
        </div>
        <br />
        <div>
            @*Tạo thẻ input có type="file" để chuyền file lưu giá trị hình ảnh*@
            <span>Hình ảnh đại diện</span>
            <br />
            <input name="AnhDD" type="file" />
            <span style="color:red;">@ViewBag.Upload</span>
        </div>
    </div>
    <div class="col-md-6 register-top-grid register-bottom-grid">
        <h3>Thông tin công ty (chỉ dành cho NTD)</h3>
        <div>
            <span>Tên công ty</span>
            @Html.TextBox("TenCT")
        </div>
        <div>
            <span>Địa chỉ</span>
            @Html.TextBox("DiaChi")
        </div>
        <div>
            <span>Số điện thoại</span>
            @Html.TextBox("SDT")
        </div>
        <div>
            <span>Email Công ty</span>
            @Html.TextBox("EmailCT")
        </div>
        <div>
            <span>Số Fax</span>
            @Html.TextBox("Fax")
        </div>
        <div>
            @*Tạo thành dãy 5 Kí tự để nhập*@
            @*@Html.Captcha(5)*@
            @Html.MathCaptcha()
        </div>
        <input type="submit" value="Tạo tài khoản">
        @*Vị trí hiển thị từ captcha*@
        <h3>@ViewBag.ThongBao1</h3>
    </div>
        <div class="clearfix"> </div>

    }
</div>



